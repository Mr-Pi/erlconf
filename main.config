%% vi: ft=erlang
[
{sasl, [
	{sasl_error_logger, false}
	]},
{lager, [
	{colored, true},
	{colors, [
		{debug,     "\e[1;38m"},
		{info,      "\e[1;37m"},
		{notice,    "\e[1;35m"},
		{warning,   "\e[1;33m"},
		{error,     "\e[1;31m"},
		{critical,  "\e[1;31;5m"},
		{alert,     "\e[1;31;43;5m"},
		{emergency, "\e[1;33;41;5m"}
		]},
	{handlers, [
		{lager_console_backend, info},
		{lager_file_backend, [{file, "log/error.log"}, {level, error}, {size, 10485760}, {date, "$D0"}, {count, 5}]},
		{lager_file_backend, [{file, "log/console.log"}, {level, info}, {size, 10485760}, {date, "$D0"}, {count, 5}]},
		{lager_file_backend, [{file, "log/warning.log"}, {level, warning}, {size, 10485760}, {date, "$D0"}, {count, 5}]}
		]},
	{async_threshold, 50}
	]}
].
